#!/bin/bash

# vi povas doni kiel argumenton 'preparo', 'tage' 
# se vi ne donas argumenton ni supozas 'tage'
celo="${1:tage}"

env_file=../../etc/.env
compose_file=docker-compose.yml

docker compose -f ${compose_file} --env-file ${env_file} exec -T -w /home/akrido akrido bash -c "./akrido ${celo}"
