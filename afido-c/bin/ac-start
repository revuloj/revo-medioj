#!/bin/bash
#set -x

env_file=../../etc/.env
compose_file=docker-compose.yml

source ${env_file}

## | Lanĉas Afidon per 'docker compose'
##
## Vi devas unue akiri la procezujon voko-afido el Ghcr
## plej bone per bin/ac-akir (aŭ loke kompili el la fontoj).

if [ ! -e /home/afido/dict ]; then
  echo "Mankas la dosierujo /home/afido/dict !"
  exit 1
fi

if [ ! -e /home/afido/var ]; then
  echo "Mankas la dosierujo /home/afido/var !"
  exit 1
fi

docker compose -f ${compose_file} --env-file ${env_file} up -d --remove-orphans
docker compose -f ${compose_file} --env-file ${env_file} logs -f
