#!/bin/bash

source ../../etc/.env

# faras ĉion kune:
# prenas retpoŝton, lanĉas afidon,
# traktas retpoŝton kaj finas afidon

datetime=$(date +%Y%m%d_%H%M%S)
log_prefix="${AFIDO_HOME}/var/log/redsrv-"
log=${log_prefix}${datetime}.log

(echo -e "${proc}\ntempo:" ${datetime}"\n" \
  && bin/ac-fetchmail \
  && docker compose -f ${compose_file} --env-file ${env_file} up -d --remove-orphans \
  && sleep 15 \
  && bin/ac-afido
  && docker compose -f ${compose_file} --env-file ${env_file} logs \
  && docker compose -f ${compose_file} --env-file ${env_file} down \ 
) 2>&1 | tee -a ${log}





